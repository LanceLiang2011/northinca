---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import ContactForm from '../components/ContactForm.astro';
import { contactPage, formConfig } from '../data/contact';
import { siteInfo } from '../data/site';
---

<BaseLayout title="Contact">
  <div class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Info Side -->
        <div>
          <SectionHeading title={contactPage.title} />
          <p class="text-lg text-gray-600 mb-12 leading-relaxed">
            {contactPage.body}
          </p>

          <div class="bg-gray-50 rounded-2xl p-8 border border-gray-100">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Contact Information</h3>
            <div class="space-y-6">
              <div class="flex items-start">
                <div class="text-[var(--color-primary)] mt-1 mr-4">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Address</h4>
                  <p class="text-gray-600">{siteInfo.contact.address}</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="text-[var(--color-primary)] mt-1 mr-4">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Phone</h4>
                  <p class="text-gray-600">{siteInfo.contact.phone}</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="text-[var(--color-primary)] mt-1 mr-4">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Email</h4>
                  <p class="text-gray-600">{siteInfo.contact.email}</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="text-[var(--color-primary)] mt-1 mr-4">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Hours</h4>
                  <p class="text-gray-600">{siteInfo.contact.hours}</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Side -->
        <div>
           <ContactForm />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
