---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import FeatureCard from '../components/FeatureCard.astro';
import { mission, vision, values, csr, team } from '../data/about';
---

<BaseLayout title="About Us">
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading title="Who We Are" center />
      
      <!-- Mission & Vision -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-20">
        <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
          <h3 class="text-2xl font-bold text-[var(--color-primary)] mb-4">Our Mission</h3>
          <p class="text-gray-600 leading-relaxed text-lg">{mission}</p>
        </div>
        <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
          <h3 class="text-2xl font-bold text-[var(--color-primary)] mb-4">Our Vision</h3>
          <p class="text-gray-600 leading-relaxed text-lg">{vision}</p>
        </div>
      </div>
      
      <!-- Values -->
      <div class="mb-20">
        <SectionHeading title="Our Values" center />
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {values.map(value => (
            <FeatureCard title={value.title} description={value.content} />
          ))}
        </div>
      </div>

      <!-- CSR -->
      <div class="bg-white rounded-3xl p-12 mb-20 shadow-sm border border-gray-100">
        <SectionHeading title="Corporate Social Responsibility" />
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          {csr.map(item => (
            <div>
              <h4 class="text-xl font-bold text-gray-900 mb-2">{item.title}</h4>
              <p class="text-gray-600 leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Team -->
      <div>
        <SectionHeading title="Leadership Team" center />
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6">
          {team.map(member => (
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 text-center hover:shadow-md transition-shadow">
              <div class="w-24 h-24 bg-gray-200 rounded-full mx-auto mb-4 flex items-center justify-center text-3xl">
                {/* Fallback avatar if no image */}
                ðŸ‘¤
              </div>
              <h4 class="font-bold text-gray-900">{member.name}</h4>
              <p class="text-sm text-[var(--color-primary)] font-medium mt-1">{member.role}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
