---
import '../styles/global.css'; // Start Tailwind
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { siteInfo } from '../data/site';

interface Props {
  title?: string;
  description?: string;
}

const { title = siteInfo.name, description = siteInfo.description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title === siteInfo.name ? title : `${title} | ${siteInfo.name}`}</title>
    <meta name="description" content={description} />
    
    <!-- Google Fonts: Inter & Roboto Flex -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap" rel="stylesheet">
    
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
    </style>
  </head>
  <body class="flex flex-col min-h-screen text-gray-800 bg-white">
    <Header />
    <main class="flex-grow pt-20"> <!-- pt-20 to offset fixed header -->
      <slot />
    </main>
    <Footer />
  </body>
</html>
